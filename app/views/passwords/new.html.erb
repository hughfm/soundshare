<div class="row">
  <div class="col-sm-5">
    <h2><%= t(".title") %></h2>
  </div>
  <div class="col-sm-7">
    <div id="clearance" class="password-reset">

      <p><%= t(".description") %></p>

      <%= form_for :password, url: passwords_path do |form| %>
      <div class="form-group text-field">
        <%= form.label :email %>
        <%= form.text_field :email, type: 'email', class: "form-control" %>
      </div>

      <div class="form-group submit-field">
        <%= form.submit class: "btn btn-lg btn-primary btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
